#!/bin/bash -e
#
# S2I assemble script for the 'openjdk' image.
# The 'assemble' script builds your application source so that it is ready to run.
#
# For more information refer to the documentation:
#	https://github.com/openshift/source-to-image/blob/master/docs/builder_image.md
#

# If the 'openjdk' assemble script is executed with the '-h' flag, print the usage.
if [[ "$1" == "-h" ]]; then
	exec /usr/libexec/s2i/usage
fi

# Restore artifacts from the previous build (if they exist).
#
if [ "$(ls /tmp/artifacts/ 2>/dev/null)" ]; then
  echo "---> Restaurando artefatos de compilação..."
  shopt -s dotglob
  mv /tmp/maven-artifacts ~/.m2
  shopt -u dotglob
fi

echo "---> Instalando código fonte da aplicação..."
cp -Rf /tmp/src/. /opt/java-app

echo "---> Executando testes unitários da aplicação..."
exec mvn test -f /opt/java-app/pom.xml

echo "---> Compilando código fonte da aplicação..."
exec mvn clean install spring-boot:repackage -f /opt/java-app/pom.xml
